<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- todo: add button icons and fonts -->
  <link rel="stylesheet" href="../css/style.css">
  <title>Todos</title>
</head>
<body>
  <section class="todo-container">
    <h1>Todos</h1>

    <section class="todo">
      <form action="/todos/createTodo" method='POST' class="todo-header">
        <input type="text" placeholder="Title" name='title'>
        <textarea rows="6" cols="45" name="content" id="" placeholder="content"></textarea>
        <button type="submit"><span>‚úÖ</span> Add Task</button>
      </form>
      <ul class="todo-list">
        <% TodoTask.forEach( task => { %>
          <li class="todo-list-item" data-id="<%=task._id%>">
            <div class="todo-list-item-title">
              <%= task.title %>
            </div>
            <div class="todo-list-item-content">
              <%= task.content %>
            </div>
            <span class="pencil">‚úèÔ∏è</span>
            <span class="trash">üóëÔ∏è</span>
          </li>
        <% }) %>
      </ul>
    </section>
  </section>
  <script src="js/main.js"></script>
</body>
</html>